#!/bin/bash
echo
echo "#################################"
echo "Moving content from skel"
echo "#################################"

for i in `ls /home/`; do su -s "/bin/bash" -c "cp -aT /etc/skel/ /home/$i/" $i || exit 0; done

echo "#################################"
echo "End arcolinux-skel"
echo "#################################"
rm /usr/local/bin/arcolinux-skel
